<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>

<div class="${isVertical ? "btn-group-vertical mt-2" : "btn-group"} btn-block">
    <a href="avaliacao-positiva-comentario.html?id_comentario=${comentario.getIdComentario()}&id_item=${item.getIdItem()}" class="btn btn-success ${isDisabled ? "disabled" : ""}" title="Avaliações Positivas"><i class="fas fa-angle-up"></i> &nbsp; ${comentario.getQuantidadeAvaliacoesPositivas()}</a>
    <a href="avaliacao-negativa-comentario.html?id_comentario=${comentario.getIdComentario()}&id_item=${item.getIdItem()}" class="btn btn-danger ${isDisabled ? "disabled" : ""}" title="Avaliações Negativas"><i class="fas fa-angle-down"></i> &nbsp; ${comentario.getQuantidadeAvaliacoesNegativas()}</a>
</div>
